// Spike sprites
spike-bottom(top, left, color)
  position absolute
  top 0px + top
  left 0px + left
  display block
  // Sets size of pixels for this element
  width p(1)
  height p(1)
  // Drawing
  triangle-bottom(color)

st = 250 // spike top
sl = -220 //spike left
sg = 35 //spi gap

.bottomSpikes
  position relative
.bottomSpikes > i
  spike-bottom(st, sl, black)
.bottomSpikes > i+i
  spike-bottom(st, sl + 1*sg, white)
