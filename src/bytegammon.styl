// Spike sprites
drawSpike(top, left, color, triangle)
  position absolute
  top 0px + top
  left 0px + left
  display block
  // Sets size of pixels for this element
  width p(1)
  height p(1)
  // Drawing
  triangle(color)

stu = 100  // spikes top upper
stl = 250  // spikes top lower
sl  = -220 // spike left
sg  = 35   // spi gap

.pointsUpper
